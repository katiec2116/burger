<div class="container text-center mt-5 pt-5 mb-5">
    <h1 class="glow">Eat-Da-Burger </h1>
    <img class = "burger mt-5" src='./assets/img/burger.png' width=200px>
  </div>
</div>
<div class="container">

  <div class="row text-center mb-4">
    <div class="col-md p-4 mr-3">
      <h2> Ready!</h2>
      <ul class="list-group text-center">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block status=1}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md p-3">
      <h2>Add a Burger</h2>
      <form class="create-form pt-2">

        <div class="form-group">
          <input type="text" id="burg" name="name">
        </div>

        <button class="btn btn-sm rounded order" type="submit">Order</button>
      </form>
    </div>
    <div class="col-md p-4 ml-3">
      <h2>Eaten</h2>
      <ul class="list-group">
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block2 status=0}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>